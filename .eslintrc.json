{
    "extends": [
      "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "overrides": [
      {
        "files": ["*.ts", "*.tsx"],
        "parserOptions": {
          "project": ["./tsconfig.json"]
        }
      }
    ],
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".tsx", ".ts"] }]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    }
  }